#!/bin/bash

brew list | command diff -u -- $HOME/.brews - | sed '1,5D' | awk '/^\-/' | sed 's/\-//' | while read b; do
  if [ -n "$b" ]; then
    brew install $b
  fi
done

brew cask list | command diff -u -- $HOME/.casks - | sed '1,5D' | awk '/^\-/' | sed 's/\-//' | while read c; do
  if [ -n "$c" ]; then
    brew cask install $c
  fi
done
